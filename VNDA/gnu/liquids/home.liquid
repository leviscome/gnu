{% head %}
  {% if tag != blank %}
    <meta property="og:description" content="{{ tag.description }}">
    <meta property="og:image" content="{{ tag.image_url }}"/>
    <meta property="og:url" content="{{ home_url }}"/>
    <meta name="description" content="{{ tag.description }}">
    <meta name="image" content="{{ tag.image_url }}"/>
    <meta meta="url" content="{{ home_url }}"/>
    
    <title>{{ tag.title }}</title>
  {% endif %}

  <link rel="stylesheet" type="text/css" href="/pages/home_above.css" inline>
  <link rel="stylesheet" href="{{ 'pages/home.css' | stylesheet_path }}" media="print" onload="this.media='all'" />
{% endhead %}

{% render 'partials/home/fullbanner', position: 'home-banner-principal' resolution: 'desktop' %}
{% render 'partials/home/fullbanner', position: 'home-banner-principal-mobile' resolution: 'mobile' %}

<div class="container">
  {% render 'partials/home/icons', position: 'home-icons', limit: 4 %}
  {% render 'partials/components/products/carousel', tag_type: 'home-produtos' %}
  {% render 'partials/home/support_banners', position: 'home-banner-apoio', limit: 2 %}
  {% render 'partials/components/products/tabs_products', tag_type: 'home-produtos-abas' %}
  {% render 'partials/home/category_banners', position: 'home-banner-categoria' %}
  {% render 'partials/home/instagram', position: 'home-instagram' %}
</div>
 
