{% assign free_sheeping_value = 00001 %}

{% load_banners position: 'frete-gratis' %}
{% for banner in loaded_banners %}
  {% if banner.title != blank %}
    {% assign free_sheeping_value = banner.subtitle | plus: 0 %}
  {% endif %}
{% endfor %}

{% if free_sheeping_value == 00001 %}
  <style>
    #cart-drawer-el > div > div > div.cart-drawer-flex.cart-drawer-flex-col.cart-drawer-p-4.cart-drawer-bg-gray-50.cart-drawer-flex-grow.cart-drawer-overflow-scroll.cart-drawer-overscroll-contain.cart-drawer-scrollbar-thin > div.vnda-shipping-container.cart-drawer-order-1.cart-drawer-p-2.cart-drawer-pt-0{
      display: none !important;
    }
  </style>
{% endif %}

<script src="{{ 'cart-drawer.v16.js' | component_path }}"></script>

<div id="component-cart-drawer-root"></div>
